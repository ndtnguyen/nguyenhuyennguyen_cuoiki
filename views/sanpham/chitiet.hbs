	.carousel-control {
		background: none !important;
		filter: progid: none !important;
		outline: 0;
	}
	.carousel {
		width: 400px !important;
		height: 400px !important;
	}
	.carousel-inner img {
  		margin: auto !important;
	}
	.detail-content {
		background-color: white;
		margin-top: 50px;
		margin-bottom: 50px;
	}
	#addresslink {
            padding-left: 10px; 
            color: blue;  
            background-color: #EFEFEF;"
            border: 1px solid;
    }
</style>
{{/section}}

{{#section 'js'}}
    <script src="/assets/bootstrap-touchspin/jquery.bootstrap-touchspin.min.js"></script>
    <script type="text/javascript">
        $('#txtQ').TouchSpin({
            min: 1,
            max: 50,
            verticalButtons: true
        });
    </script>
{{/section}}

{{#section 'customnavbar'}}
{{#each sanpham}}
<div class="row" id="addresslink">
    <div class="col-sm-0 col-md-1 col-lg-1"></div>
    <div class="col-sm-12 col-md-11 col-lg-11">
        <a href="/trangchu" class="linknav">Trang chủ </a>
            <img src="/imgs/right-arrow.png" >
            <a href="/danhmuc/{{DanhMuc}}" class="linknav">Điện gia dụng - Điện lạnh</a>
            <img src="/imgs/right-arrow.png" >
        <a href="/product/detail/{{MaSP}}" class="linknav">{{TenSP}}</a>
    </div>
</div>
{{/each}}
{{/section}}

<div class="row detail-content">
	<!--Hình ảnh sản phẩm-->
	<div class="col-sm-5 col-md-5 col-lg-5">
		<div id="myCarousel" class="carousel slide" data-ride="carousel">
		  	<!-- Indicators -->
		  	<ol class="carousel-indicators">
		    	<li data-target="#myCarousel" data-slide-to="0" class="active"></li>
		    	<li data-target="#myCarousel" data-slide-to="1"></li>
		    	<li data-target="#myCarousel" data-slide-to="2"></li>
		  	</ol>
		  	
		  	<!-- Wrapper for slides -->
			{{#each sanpham }}
		  	<div class="carousel-inner">
				<div class="item active">
					<img src="/imgs/sanpham/{{MaSP}}/1.jpg">
				</div>

				<div class="item">
					<img src="/imgs/sanpham/{{MaSP}}/2.jpg">
				</div>

					<div class="item">
					<img src="/imgs/sanpham/{{MaSP}}/3.jpg" >
				</div>
		  	</div>
		  	{{/each}} 	
		  	<!-- Left and right controls -->
		  	<a class="left carousel-control" href="#myCarousel" data-slide="prev">
		    	<span class="glyphicon glyphicon-chevron-left"></span>
		    	<span class="sr-only">Previous</span>
		  	</a>
		  	<a class="right carousel-control" href="#myCarousel" data-slide="next">
		    	<span class="glyphicon glyphicon-chevron-right"></span>
		    	<span class="sr-only">Next</span>
		  	</a>
		</div>	
	</div>
	<!--Thông tin sản phẩm-->
	<div class="col-sm-7 col-md-7 col-lg-7">
		<!--Tên sản phẩm-->
		<div class="row">
			{{#each sanpham}}
                	<h1><b>{{TenSP}}</b></h1>
                	<hr>
                	{{/each}}
		</div>
			
		<!--Thông tin chi tiết-->
		<div class="row">
			<!--Thông tin đấu giá-->
			<div class="col-sm-12 col-md-6 col-lg-6" style="line-height: 30px;"> 
				{{#each nguoiban}}
                		<b>Người bán:</b> <a href="#">{{Username}}</a>
                		{{/each}}
				<br>
				{{#each sanpham}}
				<b>Giá bán:</b> 
				<span style="color: red; font-weight:bold"> 
                        		{{formatNumber GiaKhoiDiem}}
                    		</span>
                		<br>
				Ngày đăng: {{now NgayDang}}
				<br>
				Ngày hết hạn: {{now ThoiGianHet}}
				{{/each}}
				
			</div>
				
			<!--Thông tin chi tiết sản phẩm-->
			<div class="col-md-6">
				<div style="font-weight: bold; font-size: 15pt;margin-bottom: 5px;">
					Thông tin sản phẩm 
				</div>
				<ul>
					{{#each mota}}
					<li>{{NoiDung}}</li>
					{{/each}}
				</ul>
			</div>
		</div>
		<hr>
		<!--Input đấu giá-->
		{{#if layoutVM.isLogged}}
		<div class="row" >
			<form>
				<div class="form-group">
					<label for="userprice"> Giá của bạn:</label>
					<input type="text" name="userprice" id="userprice">
					<button type="button" class="btn btn-danger" style="margin-left: 10px;">
						Đấu giá
					</button>
				</div>	
			</form>
			{{#if liked}}
			{{#each sanpham}}
            		<form class="form-horizontal" id="frmAddItem" method="post" action="/sanpham/huyyeuthich/{{MaSP}}">
                	{{/each}}
	            		<div class="form-group">
	                		<div class="col-sm-4">
	                    			<button class="btn likebtn" type="submit" data-toggle="modal" data-target="#myModal" name="likebutton">
	                    				<span class="glyphicon glyphicon-ok"></span>
	                        			Đã thêm vào yêu thích
	                    			</button>
	            			</div>
	            		</div>
			</form>
	        	{{else}}
	        	{{#each sanpham}}
	        	<form class="form-horizontal" id="frmAddItem" method="post" action="/sanpham/themyeuthich/{{MaSP}}">
                	{{/each}}
	            		<div class="form-group">
	                		<div class="col-sm-4">
	                    			<button class="btn likebtn" type="submit" data-toggle="modal" data-target="#myModal" name="likebutton">
	                    				<span class="glyphicon glyphicon-heart"></span>
	                    				Thêm vào yêu thích
	                    			</button>
	                		</div>
	            		</div>
			</form> 
			{{/if}}
		</div>
		{{/if}}
	</div>
</div>

{{#section 'js'}}

{{/section}}
