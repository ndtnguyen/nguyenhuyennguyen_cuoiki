{{#section 'css'}}
<style type="text/css">
	.carousel-control {
		background: none !important;
		filter: progid: none !important;
		outline: 0;
	}
	.carousel {
		width: 400px !important;
		height: 400px !important;
	}
	.carousel-inner img {
  		margin: auto !important;
	}
	.detail-content {
		background-color: white;
		margin-top: 50px;
		margin-bottom: 50px;
	}
</style>
{{/section}}

<div class="row detail-content">
	<!--Hình ảnh sản phẩm-->
	<div class="col-sm-5 col-md-5 col-lg-5">
		<div id="myCarousel" class="carousel slide" data-ride="carousel">
		  	<!-- Indicators -->
		  	<ol class="carousel-indicators">
		    	<li data-target="#myCarousel" data-slide-to="0" class="active"></li>
		    	<li data-target="#myCarousel" data-slide-to="1"></li>
		    	<li data-target="#myCarousel" data-slide-to="2"></li>
		  	</ol>
		  	
		  	<!-- Wrapper for slides -->
		  	<div class="carousel-inner">
		    	<div class="item active">
		      		<img src="/imgs/sanpham/{{sanpham.0.MaSP}}/1.jpg">
		    	</div>

		    	<div class="item">
		      		<img src="/imgs/sanpham/{{sanpham.0.MaSP}}/2.jpg">
		    	</div>

				<div class="item">
		      		<img src="/imgs/sanpham/{{sanpham.0.MaSP}}/3.jpg" >
		    	</div>
		  	</div>
		  		
		  	<!-- Left and right controls -->
		  	<a class="left carousel-control" href="#myCarousel" data-slide="prev">
		    	<span class="glyphicon glyphicon-chevron-left"></span>
		    	<span class="sr-only">Previous</span>
		  	</a>
		  	<a class="right carousel-control" href="#myCarousel" data-slide="next">
		    	<span class="glyphicon glyphicon-chevron-right"></span>
		    	<span class="sr-only">Next</span>
		  	</a>
		</div>	
	</div>
	<!--Thông tin sản phẩm-->
	<div class="col-sm-7 col-md-7 col-lg-7">
		<!--Tên sản phẩm-->
		<div class="row">
				<h1><b>{{sanpham.0.TenSP}}</b></h1>
				<hr>
		</div>
			
		<!--Thông tin chi tiết-->
		<div class="row">
			<!--Thông tin đấu giá-->
			<div class="col-sm-12 col-md-6 col-lg-6" style="line-height: 30px;"> 
				<b>Người bán:</b> 
				<a href="#">{{sanpham.0.TenKH}}</a>
				<div style="color: red; font-weight:bold"> 
					Giá bán: {{formatNumber sanpham.0.GiaKhoiDiem}}
				</div>
				Ngày đăng: {{now sanpham.0.NgayDang}}
				<br>
				Ngày hết hạn: {{now sanpham.0.ThoiGianHet}}
				<br>
				<div id="deadline">Deadline</div>
			</div>
				
			<!--Thông tin chi tiết sản phẩm-->
			<div class="col-md-6 hihi">
				<ul>
					{{#each sanpham}}
					<li>{{NoiDung}}</li>
					{{/each}}
				</ul>
			</div>
		</div>
			<!--Input đấu giá-->
		<div class="row" >
			<form>
				<div class="form-group">
					<label for="userprice"> Giá của bạn:</label>
					<input type="text" name="userprice" id="userprice">
					<button type="button" class="btn btn-danger" style="margin-left: 10px;">
						Đấu giá
					</button>
				</div>	
			</form>	
		</div>
	</div>
</div>

{{#section 'js'}}

{{/section}}
