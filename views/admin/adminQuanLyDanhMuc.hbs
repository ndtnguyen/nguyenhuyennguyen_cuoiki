     	});

     	$('.XoaDanhMuc').on('click', function()
     	{
     		var MaDanhMuc = $(this).data('id');
     		$('#txtDelCatId').val(MaDanhMuc);
     		$('#frmDeleteCategory').submit();
     	});

     </script>
</body>
</html>