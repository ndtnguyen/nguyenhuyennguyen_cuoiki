{{#if layoutVM.isLogged }}
<div class="row">
     <br><br>
     <div class="col-md-3">
        <div class="panel panel-default">
            <div class="panel-heading" style="background-color: #189eff; color: white; font-size: 18px;font-weight: normal;line-height: 15px;">
                Danh mục
            </div>
            <div class="panel-body">
               {{> nguoiban this }}
            </div>
        </div>
    
    </div>
    <div  class="col-md-9">
		<div class="panel panel-default">
            <div class="panel-heading" style="background-color: #189eff; color: white; font-size: 18px;font-weight: normal;line-height: 15px;">
                Thông tin cá nhân
            </div>
            <div class="panel-body">
					<center> <h2> THÔNG TIN CÁ NHÂN </h2></center>
                        <br></br>
                <form class="form-horizontal" method="post" action="" id="frmLogin">
                    <div class="form-group">
                        <label for="txtName" class="col-sm-3 control-label">Họ tên</label>
                        <div class="col-sm-6">
                            <input type="text" class="form-control" id="txtName" name="name" value= "{{ layoutVM.curUser.name }}" readonly>
                        </div>
                    </div>
                     <div class="form-group">
                        <label for="txtUsername" class="col-sm-3 control-label">Tên đăng nhập</label>
                        <div class="col-sm-6">
                            <input type="text" class="form-control" id="txtUsername" value= "{{layoutVM.curUser.username}}" name="username" readonly>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="txtEmail" class="col-sm-3 control-label">Email</label>
                        <div class="col-sm-6">
                            <input type="text" class="form-control" id="txtEmail" value = "{{layoutVM.curUser.email}}" name="email" readonly>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="txtDOB" class="col-sm-3 control-label">Ngày sinh</label>
                        <div class="col-sm-6">
                            <input type="text" class="form-control datepicker" id="txtDOB" value = "{{layoutVM.curUser.dob}}" name="dob" readonly>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<br>
